upstream ppt.adrianistan.eu {
	server 127.0.0.1:5454;
}

server {
	listen 80;
	server_name ppt.adrianistan.eu;

	location / {
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarder_For $proxy_add_x_forwarded_for;
		proxy_set_header Host $http_host;
		proxy_set_header X-NginX-Proxy true;
	
		proxy_pass http://ppt.adrianistan.eu;
		proxy_redirect off;
	}
} 
